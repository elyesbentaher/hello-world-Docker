pipeline {
    agent any

    stages {
        stage('Checkout-project') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                              branches: [[name: 'hello-world-js']], 
                              userRemoteConfigs: [[url: 'https://gitlab.com/elyeslayes0/dev-ops-training-fork-2']]])
                }
            }
        }
        stage('Build-project') {
            steps {
                script {
                    sh './gradlew buildNode' // Replace with your build script command
                }
            }
        }
    }
}

