pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from version control
                 checkout([$class: 'GitSCM', branches: [[name: '*/docker-pipeline']],
                 userRemoteConfigs: [[url: 'https://gitlab.com/elyeslayes0/dev-ops-training-fork-2.git']]])
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("elyeslayes/docker-pipeline:latest")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push Docker image to Docker Hub
                    docker.withRegistry('https://hub.docker.com', 'dockerhub_credentials') {
                        docker.image("elyeslayes/docker-pipeline:latest").push()
                    }
                }
            }
        }
    }
}
