pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                              branches: [[name: 'preprod_deploy']], 
                              userRemoteConfigs: [[url: 'https://gitlab.com/proservice1/devops-training.git']]
                    ])
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo 'running build automation'
                    sh './gradlew build' // Replace with your build script command
                    archiveArtifacts artifacts: '**/*', fingerprint: true
                }
            }
        }
        stage('DeployToProd') {
            when {
                expression { 
                    return env.BRANCH_NAME == 'preprod_deploy' 
                }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'webserver_login', usernameVariable: 'deploy', passwordVariable: 'jenkins')]) {
                    script {
                        sshPublisher(publishers: [
                            sshPublisherDesc(configName: 'prod', 
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: 'build/libs/*', 
                                        removePrefix: 'build/libs', 
                                        remoteDirectory: '/tmp', 
                                        execCommand: 'chmod +x /tmp/gradlew && /tmp/gradlew buildNode'
                                    )
                                ],
                                remote: [
                                    [ 
                                        user: 'deploy', 
                                        password: 'jenkins', 
                                        hostname: '35.240.62.3', 
                                        port: 22, 
                                        allowAnyHosts: true
                                    ]
                                ]
                            )
                        ])
                    }
                }
            }
        }
    }
}

