pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', 
                              branches: [[name: 'gradle-8.4']], 
                              userRemoteConfigs: [[url: 'https://gitlab.com/proservice1/devops-training.git']])
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo 'running build automation'
                    sh './gradlew build' // Replace with your build script command
                    archiveArtifacts artifacts: '**/*', fingerprint: true
                }
            }
        }
        stage('DeployToPreprod') {
            when {
                expression { 
                    return env.BRANCH_NAME == 'gradle-8.4' 
                }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'webserver_login', usernameVariable: 'deploy', passwordVariable: 'jenkins')]) {
                    sshPublisher(publishers: [
                        sshPublisherDesc(configName: 'preprod', transfers: [
                            sshTransfer(sourceFiles: 'build/libs/*', removePrefix: 'build/libs', remoteDirectory: '/tmp', execCommand: 'chmod +x /tmp/gradlew && /tmp/gradlew buildNode')
                        ], 
                        sshServer: [sshServer(
                            credentialsId: 'webserver_login',
                            hostname: 'preprod',
                            port: 22
                        )])
                    ])
                }
            }
        }

        stage('DeployToProd') {
            when {
                expression { 
                    return env.BRANCH_NAME == 'gradle-8.4' 
                }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'webserver_login', usernameVariable: 'deploy', passwordVariable: 'jenkins')]) {
                    sshPublisher(publishers: [
                        sshPublisherDesc(configName: 'prod', transfers: [
                            sshTransfer(sourceFiles: 'build/libs/*', removePrefix: 'build/libs', remoteDirectory: '/tmp', execCommand: 'chmod +x /tmp/gradlew && /tmp/gradlew buildNode')
                        ], 
                        sshServer: [sshServer(
                            credentialsId: 'webserver_login',
                            hostname: 'prod',
                            port: 22
                        )])
                    ])
                }
            }
        }
    }
}
