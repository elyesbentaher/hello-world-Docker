pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                  checkout scm
             }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("elyeslayes/docker-pipeline:latest")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh 'docker images"

                    // Push Docker image to Docker Hub
                    docker.withRegistry('https://docker.io', 'dockerhub_credentials') {
                        docker.image("elyeslayes/docker-pipeline:latest").push()
                    }
                }
            }
        }
    }
}
